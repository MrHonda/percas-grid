{
  "name": "percas/grid",
  "description": "Datagrid",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Percas\\Grid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Percas\\Grid\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.2",
    "ext-pdo": "*",
    "symfony/property-access": "^5.0",
    "symfony/serializer": "^5.0",
    "ext-json": "*"
  },
  "require-dev": {
    "mockery/mockery": "^1.3",
    "phpmd/phpmd": "^2.8",
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^9.0",
    "symplify/easy-coding-standard": "^7.2"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "phpstan": "vendor\\bin\\phpstan analyse src --level 7",
    "ecs": "vendor\\bin\\ecs check src tests --fix"
  }
}
